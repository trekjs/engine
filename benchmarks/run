#!/usr/bin/env bash

echo
MW=$1 node $2 &
pid=$!

if [ "$2" == "express" ]; then
  port="1"
elif [ "$2" == "koa" ]; then
  port="2"
elif [ "$2" == "toa" ]; then
  port="3"
elif [ "$2" == "trek" ]; then
  port="4"
elif [ "$2" == "restify" ]; then
  port="5"
fi

uri='http://127.0.0.1:700'${port}'?foo[bar]=baz'

sleep 2
echo "------- $2 -------"
curl -g $uri
echo ""
if [ "$benchmarker" == "autocannon" ]; then
  autocannon $uri \
    -d 10 \
    -c 50 \
    --progress=0
else
  wrk $uri \
    -d 10 \
    -c 50 \
    -t 8
fi

kill $pid
